<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
    <!--admin-login-->
    <definition name="login"
                template="/WEB-INF/jsp/login.jsp">
    </definition>

    <definition name="mainLayout.definition"
                template="/WEB-INF/jsp/layouts/mainLayout.jsp">
        <put-attribute name="navigation" value="/WEB-INF/jsp/component/navigation.jsp" />
        <put-attribute name="banner" value="/WEB-INF/jsp/component/banner.jsp" />
        <put-attribute name="feature" value="/WEB-INF/jsp/component/feature.jsp" />
        <put-attribute name="body" value="" />
        <put-attribute name="subscribe" value="/WEB-INF/jsp/component/subscribe.jsp" />
        <put-attribute name="footer" value="/WEB-INF/jsp/component/footer.jsp" />
    </definition>
    <definition name="home" extends="mainLayout.definition">
        <put-attribute name="body" value="/WEB-INF/jsp/home.jsp"/>
    </definition>

</tiles-definitions>